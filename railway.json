{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "watchPatterns": ["figma-smart-image-mcp/**"]
  },
  "deploy": {
    "startCommand": "node figma-smart-image-mcp/dist/server.js --transport http --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "workingDirectory": "/app/figma-smart-image-mcp"
  }
}
